<T3DataStructure>
	<sheets>
		<!--
			################################
			  SHEET General Settings
			################################
		-->
		<sDEF>
			<ROOT>
				<sheetTitle>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings</sheetTitle>
				<type>array</type>
				<el>
					<!-- order -->
					<settings.orderBy>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy</label>
							<config>
								<type>select</type>
								<itemsProcFunc>GeorgRinger\News\Hooks\ItemsProcFunc->user_orderBy</itemsProcFunc>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="label"></numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
									<numIndex index="value">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy.tstamp</numIndex>
										<numIndex index="value">tstamp</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy.datetime</numIndex>
										<numIndex index="value">datetime</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy.crdate</numIndex>
										<numIndex index="value">crdate</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderBy.title</numIndex>
										<numIndex index="value">title</numIndex>
									</numIndex>
								</items>
							</config>
					</settings.orderBy>

					<!-- order direction  -->
					<settings.orderDirection>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="label"></numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
									<numIndex index="value">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection.asc</numIndex>
										<numIndex index="value">asc</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.orderDirection.desc</numIndex>
										<numIndex index="value">desc</numIndex>
									</numIndex>
								</items>
							</config>
					</settings.orderDirection>

					<!-- datefield: select relevant file dateMenu  -->
					<settings.dateField>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.dateField</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="label"></numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
									<numIndex index="value">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.dateField.datetime</numIndex>
										<numIndex index="value">datetime</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.dateField.archive</numIndex>
										<numIndex index="value">archive</numIndex>
									</numIndex>
								</items>
							</config>
					</settings.dateField>

					<!-- Category Mode -->
					<settings.categoryConjunction>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.all</numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
									<numIndex index="value">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.or</numIndex>
										<numIndex index="value">or</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.and</numIndex>
										<numIndex index="value">and</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.notor</numIndex>
										<numIndex index="value">notor</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categoryConjunction.notand</numIndex>
										<numIndex index="value">notand</numIndex>
									</numIndex>
								</items>
							</config>
					</settings.categoryConjunction>

					<!-- Category -->
					<settings.categories>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.categories</label>
							<config>
								<type>select</type>
								<renderMode>tree</renderMode>
								<renderType>selectTree</renderType>
								<treeConfig>
<!--									<dataProvider>GeorgRinger\News\TreeProvider\DatabaseTreeDataProvider</dataProvider>-->
									<parentField>parent</parentField>
									<appearance>
										<maxLevels>99</maxLevels>
										<expandAll>TRUE</expandAll>
										<showHeader>TRUE</showHeader>
									</appearance>
								</treeConfig>
								<foreign_table>sys_category</foreign_table>
								<foreign_table_where>AND (sys_category.sys_language_uid = 0 OR sys_category.l10n_parent = 0) ORDER BY sys_category.sorting</foreign_table_where>
								<size>15</size>
								<minitems>0</minitems>
								<maxitems>99</maxitems>
							</config>
					</settings.categories>

					<!-- Include sub categories -->
					<settings.includeSubCategories>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.includeSubCategories</label>
							<config>
								<type>check</type>
							</config>
					</settings.includeSubCategories>


					<!-- Archive -->
					<settings.archiveRestriction>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.archiveRestriction</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.no-constraint</numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
									<numIndex index="value">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.archiveRestriction.active</numIndex>
										<numIndex index="value">active</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.archiveRestriction.archived</numIndex>
										<numIndex index="value">archived</numIndex>
									</numIndex>
								</items>
							</config>
					</settings.archiveRestriction>

					<!-- Time limit Low -->
					<settings.timeRestriction>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.timeRestriction</label>
							<config>
								<checkbox>1</checkbox>
								<default></default>
								<type>input</type>
								<size>15</size>
							</config>
					</settings.timeRestriction>

					<!-- Time limit High -->
					<settings.timeRestrictionHigh>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.timeRestrictionHigh</label>
							<config>
								<checkbox>1</checkbox>
								<default></default>
								<type>input</type>
								<size>15</size>
							</config>
					</settings.timeRestrictionHigh>

					<!-- Top News -->
					<settings.topNewsRestriction>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.topNewsRestriction</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.no-constraint</numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
									<numIndex index="value">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.topNewsRestriction.1</numIndex>
										<numIndex index="value">1</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.topNewsRestriction.2</numIndex>
										<numIndex index="value">2</numIndex>
									</numIndex>
								</items>
							</config>
					</settings.topNewsRestriction>

					<!-- settings.previewHiddenRecords -->
					<settings.previewHiddenRecords>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords</label>
							<config type="array">
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords.I.2</numIndex>
										<numIndex index="value">2</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords.I.1</numIndex>
										<numIndex index="value">1</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords.I.0</numIndex>
										<numIndex index="value">0</numIndex>
									</numIndex>
								</items>
								<size type="integer">1</size>
								<maxitems type="integer">1</maxitems>
							</config>
					</settings.previewHiddenRecords>

					<!-- startingpoint -->
					<settings.startingpoint>
							<label>LLL:EXT:core/Resources/Private/Language/locallang_general.xlf:LGL.startingpoint</label>
							<config>
								<type>group</type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
							</config>
					</settings.startingpoint>

					<!-- recursive -->
					<settings.recursive>
							<label>LLL:EXT:core/Resources/Private/Language/locallang_general.xlf:LGL.recursive</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="1" type="array">
										<numIndex index="label">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.recursive.I.inherit</numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="label">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.0</numIndex>
										<numIndex index="value">0</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="label">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.1</numIndex>
										<numIndex index="value">1</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="label">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.2</numIndex>
										<numIndex index="value">2</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="label">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.3</numIndex>
										<numIndex index="value">3</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="label">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.4</numIndex>
										<numIndex index="value">4</numIndex>
									</numIndex>
									<numIndex index="7" type="array">
										<numIndex index="label">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.5</numIndex>
										<numIndex index="value">250</numIndex>
									</numIndex>
								</items>
							</config>
					</settings.recursive>
				</el>
			</ROOT>
		</sDEF>
		<!--
					################################
					  SHEET Additional
					################################
				-->
		<additional>
			<ROOT>
				<sheetTitle>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_tab.additional</sheetTitle>
				<type>array</type>
				<el>


					<!-- PID Detail Page -->
					<settings.detailPid>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.detailPid</label>
							<config>
								<type>group</type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
					</settings.detailPid>

					<!-- PID List Page -->
					<settings.listPid>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.listPid</label>
							<config>
								<type>group</type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
					</settings.listPid>

					<!-- PID Back -->
					<settings.backPid>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.backPid</label>
							<config>
								<type>group</type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
					</settings.backPid>

					<!-- Limit Start -->
					<settings.limit>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.limit</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
					</settings.limit>

					<!-- Offset -->
					<settings.offset>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.offset</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
					</settings.offset>

					<!-- Tags -->
					<settings.tags>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.tags</label>
							<config>
								<type>group</type>
								<allowed>tx_news_domain_model_tag</allowed>
								<size>3</size>
								<minitems>0</minitems>
								<maxitems>99</maxitems>
							</config>
					</settings.tags>

					<!-- Hide pagination -->
					<settings.hidePagination>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.hidePagination</label>
							<config>
								<type>check</type>
							</config>
					</settings.hidePagination>

					<settings.list.paginate.itemsPerPage>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.itemsPerPage</label>
							<config>
								<type>input</type>
								<size>2</size>
							</config>
					</settings.list.paginate.itemsPerPage>

					<!-- topNewsFirst -->
					<settings.topNewsFirst>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.topNewsFirst</label>
							<config>
								<type>check</type>
							</config>
					</settings.topNewsFirst>

					<!-- only not displayed news -->
					<settings.excludeAlreadyDisplayedNews>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.excludeAlreadyDisplayedNews</label>
							<config>
								<type>check</type>
							</config>
					</settings.excludeAlreadyDisplayedNews>

					<!-- disable overrideDemand -->
					<settings.disableOverrideDemand>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.disableOverrideDemand</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
					</settings.disableOverrideDemand>
				</el>
			</ROOT>
		</additional>

		<!--
			################################
			  SHEET Template
			################################
		-->
		<template>
			<ROOT>
				<sheetTitle>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_tab.template</sheetTitle>
				<type>array</type>
				<el>

					<!-- Image Width -->
					<settings.media.maxWidth>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_template.mediaMaxWidth</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
					</settings.media.maxWidth>

					<!-- Image Height -->
					<settings.media.maxHeight>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_template.mediaMaxHeight</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
					</settings.media.maxHeight>

					<!-- crop length Teaser -->
					<settings.cropMaxCharacters>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_template.cropMaxCharacters</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
					</settings.cropMaxCharacters>

					<!-- Template Layout -->
					<settings.templateLayout>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_template.templateLayout</label>
							<config>
								<type>select</type>
								<itemsProcFunc>GeorgRinger\News\Hooks\ItemsProcFunc->user_templateLayout</itemsProcFunc>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="label"></numIndex>
										<numIndex index="value"></numIndex>
									</numIndex>
								</items>
							</config>
					</settings.templateLayout>
				</el>
			</ROOT>
		</template>
	</sheets>
</T3DataStructure>
